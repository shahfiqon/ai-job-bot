{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Scrape Jobs",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scrape_jobs.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "cwd": "${workspaceFolder}/backend",
        },
        {
            "name": "Backend: APIs",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "justMyCode": false
        },
        {
            "name": "CLI: Jobbot Scrape",
            "type": "debugpy",
            "request": "launch",
            "module": "cli.main",
            "args": [
                "scrape",
                "--search-term", "python",
                "--location", "usa",
                "--results-wanted", "15"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "justMyCode": false
        },
        {
            "name": "CLI: Jobbot Scrape (with hours-old)",
            "type": "debugpy",
            "request": "launch",
            "module": "cli.main",
            "args": [
                "scrape",
                "--search-term", "python",
                "--location", "usa",
                "--results-wanted", "15",
                "--hours-old", "1"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "justMyCode": false
        },
        {
            "name": "Debugger: Run selected file.",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            }
        },
        {
            "name": "Debugger: Job Parser",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/test-scripts/job_parser.py",
            "cwd": "${workspaceFolder}/backend/test-scripts",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "args": ["./example-jobs", "--output", "jobs.json"]
        }
    ]
}